{% block content %}

<div class="card md-4 shadow">
    <div class="card-body">
        <p>{{ comment.message }}</p>
        <div class="d-flex justify-content-between">
            <small>Author: {{ username }}</small>
            <form action="/comments/delete/{{ mountain._id }}/{{ comment._id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete Comment">
            </form>
        </div>
    </div>
</div>

{% endblock %}