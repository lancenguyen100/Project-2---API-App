{% layout 'layout.liquid' %}

{% block content %}
<div class="container-md">
    <form action="/mountains/{{mountain._id}}?_method=PUT" method="POST">
        <fieldset>
            <legend>Edit {{mountain.name}}</legend>
            <label class="form-label">Name:</label>
            <input
                class="form-control"
                type="text"
                name="name"
                placeholder="enter name"
                value="{{mountain.name}}"
                >
            <label class="form-label">Image:</label>
            <input
                class="form-control"
                type="file"
                name="image"
                placeholder="upload image"
                value="{{mountain.img}}"
                >
            <label class="form-label">Location:</label>
            <input
                class="form-control"
                type="text"
                name="location"
                placeholder="enter location"
                value="{{mountain.location}}"
                >
            <label class="form-label">Elevation:</label>
            <input
                class="form-control"
                type="text"
                name="elevation"
                placeholder="enter elevation"
                value="{{mountain.elevation}}"
                >
            <label class="form-label">Description:</label>
            <input
                class="form-control"
                type="text"
                name="description"
                placeholder="enter description"
                value="{{mountain.description}}"
                >
            <label class="form-label">Activities:</label>
            <input
                class="form-control"
                type="text"
                name="activities"
                placeholder="enter activities"
                value="{{mountain.activity}}"
                >
            <label class="form-label">Number of Lifts:</label>
            <input
                class="form-control"
                type="number" min="0"
                name="numberOfLift"
                placeholder="enter numberOfLift"
                value="{{mountain.numberOfLift}}"
                >
            <label class="form-label">Number of Slopes/Runs:</label>
            <input
                class="form-control"
                type="number" min="0"
                name="numberOfRun"
                placeholder="enter numberOfRun"
                value="{{mountain.numberOfRun}}"
                >
        </fieldset>
        <div class="btn-group">
            <input type="submit"
            value="Edit {{mountain.name}}"
            class="btn btn-success">
            <a href="/mountains" class="btn btn-warning">Take Me Back</a>
        </div>
    </form>
</div>
<style>
    .btn-group {
        margin-top: 20px;
    }
    .btn-success {
        margin-left: 10px;
    }
</style>

{% endblock %} 